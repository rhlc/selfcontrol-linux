[Unit]
Description=SelfControl Linux Daemon
After=dbus.service

[Service]
Type=dbus
BusName=com.github.selfcontrol
ExecStart=/usr/libexec/selfcontrol-daemon
Restart=on-failure
RestartSec=5

# Security hardening
ProtectSystem=strict
ReadWritePaths=/etc/hosts /var/lib/selfcontrol-linux
ProtectHome=yes
NoNewPrivileges=no
CapabilityBoundingSet=CAP_NET_ADMIN

[Install]
WantedBy=multi-user.target
